<?xml version="1.0" encoding="utf-8"?>
<!-- Regras de extração de dados para Android 12+ -->
<data-extraction-rules>
    <cloud-backup disableIfNoEncryptionCapabilities="true">
        <!-- Permitir backup na nuvem apenas com criptografia -->
        <include domain="sharedpref" path="eletricarlos_data.xml"/>
        <include domain="sharedpref" path="eletricarlos_auth.xml"/>
        
        <!-- Excluir dados temporários -->
        <exclude domain="file" path="temp/"/>
        <exclude domain="cache" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Permitir transferência segura entre dispositivos -->
        <include domain="sharedpref" path="eletricarlos_data.xml"/>
        <include domain="sharedpref" path="eletricarlos_auth.xml"/>
    </device-transfer>
</data-extraction-rules>